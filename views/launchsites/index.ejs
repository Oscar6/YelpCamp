<% include ../partials/header %>


<div class="container">
   <header class="jumbotron">
      <div class="container">
         <h1>Innovation Sites</h1>
         <p>View the following leading Innovation Sites</p>
         <p>
            <a class="btn btn-primary btn-lg" href="/launchsites/new">Add New Launchsite</a>
         </p>
      </div>
   </header>
   
   <div  class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% launchsites.forEach(function(launchsite){ %>
         <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
               <img src="<%= launchsite.image %>">
               <div class="caption">
                  <h4><%= launchsite.name %></h4>
               </div>
               <p>
                  <a href="/launchsites/<%= launchsite._id %>" class="btn btn-primary">More Info</a>
               </p>
            </div>
         </div>
      <% }); %>
   </div>
   
</div>

<% include ../partials/footer %>